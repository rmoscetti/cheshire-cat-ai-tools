{
  "name": "Cheshire Cat AI Tools",
  "dockerComposeFile": "../docker-cat/compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspaces",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "tamasfe.even-better-toml",
        "charliermarsh.ruff"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/evaluation/.pixi/envs/default/python",
        "editor.formatOnSave": true,
        "[python]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "charliermarsh.ruff"
        }
      }
    }
  },
  "mounts": [
    "source=${localWorkspaceFolderBasename}-pixi,target=${containerWorkspaceFolder}/evaluation/.pixi,type=volume"
  ],
  "postCreateCommand": "sudo chown vscode evaluation/.pixi && cd evaluation && pixi install"
}
